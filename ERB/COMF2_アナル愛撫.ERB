;eraIM@Sから導入しました(eramaou)

;-------------------------------------------------
;애널애무
;愛撫系コマンド：調教者が調教対象の애널を手で刺激
;-------------------------------------------------
@COM2

PRINTL 애널애무
;SAVESTR:22 = 애널애무
CALL TRAIN_MESSAGE_B

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
LOSEBASE:0 += 20
LOSEBASE:1 += 100

SOURCE:12 = 850
SOURCE:14 = 200

;ABL:Ａ感覚をみる
IF ABL:3 == 0
	SOURCE:2 = 20
	SOURCE:13 = 300
ELSEIF ABL:3 == 1
	SOURCE:2 = 75
	SOURCE:13 = 350
ELSEIF ABL:3 == 2
	SOURCE:2 = 300
	SOURCE:13 = 400
ELSEIF ABL:3 == 3
	SOURCE:2 = 700
	SOURCE:13 = 650
ELSEIF ABL:3 == 4
	SOURCE:2 = 1100
	SOURCE:13 = 1000
ELSE
	SOURCE:2 = 1500
	SOURCE:13 = 1500
ENDIF

;EXP:Ａ経験をみる
IF EXP:1 < EXPLV:1
	TIMES SOURCE:2 , 0.20
	TIMES SOURCE:13, 0.20
	SOURCE:6 = 500
	SOURCE:14 += 200
ELSEIF EXP:1 < EXPLV:2
	TIMES SOURCE:2 , 0.50
	TIMES SOURCE:13, 0.50
	SOURCE:6 = 400
	SOURCE:14 += 100
ELSEIF EXP:1 < EXPLV:3
	TIMES SOURCE:2 , 1.00
	TIMES SOURCE:13, 1.00
	SOURCE:6 = 300
	SOURCE:14 += 50
ELSEIF EXP:1 < EXPLV:4
	TIMES SOURCE:2 , 1.20
	TIMES SOURCE:13, 1.20
	SOURCE:6 = 200
ELSEIF EXP:1 < EXPLV:5
	TIMES SOURCE:2 , 1.60
	TIMES SOURCE:13, 1.60
	SOURCE:6 = 100
ELSE
	TIMES SOURCE:2 , 1.80
	TIMES SOURCE:13, 1.80
	SOURCE:6 = 50
ENDIF

;PALAM:潤滑をみる
IF PALAM:3 < PALAMLV:1
	TIMES SOURCE:2 , 0.10
	TIMES SOURCE:13, 0.10
	TIMES SOURCE:6 , 3.00
ELSEIF PALAM:3 < PALAMLV:2
	TIMES SOURCE:2 , 0.20
	TIMES SOURCE:13, 0.20
	TIMES SOURCE:6 , 2.00
ELSEIF PALAM:3 < PALAMLV:3
	TIMES SOURCE:2 , 0.60
	TIMES SOURCE:13, 0.60
	TIMES SOURCE:6 , 1.00
ELSEIF PALAM:3 < PALAMLV:4
	TIMES SOURCE:2 , 1.00
	TIMES SOURCE:13, 1.00
	TIMES SOURCE:6 , 0.50
ELSEIF PALAM:3 >= PALAMLV:4
	TIMES SOURCE:2 , 2.00
	TIMES SOURCE:13, 2.00
	TIMES SOURCE:6 , 0.10
ENDIF

;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES SOURCE:2 , 0.30
	TIMES SOURCE:13, 0.30
ELSEIF PALAM:5 < PALAMLV:2
	TIMES SOURCE:2 , 0.60
	TIMES SOURCE:13, 0.60
ELSEIF PALAM:5 < PALAMLV:3
	TIMES SOURCE:2 , 1.00
	TIMES SOURCE:13, 1.00
ELSEIF PALAM:5 < PALAMLV:4
	TIMES SOURCE:2 , 1.30
	TIMES SOURCE:13, 1.30
ELSEIF PALAM:5 >= PALAMLV:4
	TIMES SOURCE:2 , 1.60
	TIMES SOURCE:13, 1.60
ENDIF


;Ａ민감、鈍感をみる
;快Ａ自体のチェックは後でまとめてやる
IF TALENT:105
	TIMES SOURCE:6 , 1.50
	TIMES SOURCE:13 , 1.50
	TIMES SOURCE:14 , 1.50
ELSEIF TALENT:106
	TIMES SOURCE:6 , 0.60
	TIMES SOURCE:13 , 0.60
	TIMES SOURCE:14 , 0.60
ENDIF

;処女で貞操観念
IF TALENT:0 && TALENT:30
	TIMES SOURCE:13 , 0.80
	TIMES SOURCE:14 , 0.50
ENDIF

;미숙
SIF TALENT:135
	TIMES SOURCE:6 , 2.00

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
IF TEQUIP:90
	;노예のＡに촉수の汚れがつく
	STAIN:4 |= 2
	STAIN:4 |= 4
ELSE
	;노예のＡ⇔調教者の指の汚れが移動
	STAIN:4 |= STAIN:PLAYER:1
	STAIN:PLAYER:1 |= STAIN:4
ENDIF

;-------------------------------------------------
;経験上昇
;-------------------------------------------------
S = 0
;Ａ感覚が高いほどＡ経験が入る
IF ABL:3 <= 1
	S = 1
ELSEIF ABL:3 <= 4
	S = 2
ELSEIF ABL:3 <= 7
	S = 3
ELSE
	S = 4
ENDIF
EXP:1 += S
PRINTFORML Ａ경험+{S}
S = 0


;레즈경험・ホモ経験
IF TALENT:122 == 0 && TALENT:PLAYER:122 == 0
	PRINTS EXPNAME:40
	PRINTL +2
	EXP:40 += 2
ELSEIF TALENT:122 == 1 && TALENT:PLAYER:122 == 1
	PRINTS EXPNAME:41
	PRINTL +5
	EXP:41 += 5
ENDIF

;애정경험
E = 1
IF CFLAG:2 >= 1000 && ASSIPLAY == 0
	PRINTFORML %EXPNAME:23%+{E}
	EXP:23 += E
ENDIF
E = 0

RETURN 1
