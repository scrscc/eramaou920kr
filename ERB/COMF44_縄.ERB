	PRINTL 촉수긴박
	;SAVESTR:22 = 촉수긴박
ELSE
	PRINTL 밧줄
	;SAVESTR:22 = 밧줄
ENDIF
CALL TRAIN_MESSAGE_B

;緊縛経験が高いと消費減少
IF EXP:51 < EXPLV:3 / 2
	LOSEBASE:0 += 100
	LOSEBASE:1 += 150
ELSEIF EXP:51 < EXPLV:4 / 2
	LOSEBASE:0 += 80
	LOSEBASE:1 += 120
ELSE
	LOSEBASE:0 += 60
	LOSEBASE:1 += 90
ENDIF

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
SOURCE:6 = 800
SOURCE:10 = 800
SOURCE:13 = 500
SOURCE:14 = 500

