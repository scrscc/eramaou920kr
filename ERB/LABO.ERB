FOR LOCAL:11,0,LOCAL:3 - 1
	;PRINTFORM LOCAL:10 = {LOCAL:10} 
	;Y繰り返し
	FOR LOCAL:10,0,LOCAL:3 - 1
		;PRINTFORML LOCAL:11 = {LOCAL:11}
