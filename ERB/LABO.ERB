	LOCAL:1 = 4
CASE 2
	LOCAL:1 = 15
CASE 3
	LOCAL:1 = 31
CASE 4
	LOCAL:1 = 50
CASE 5
	LOCAL:1 = 69
CASE 6
	LOCAL:1 = 85
CASE 7
	LOCAL:1 = 96
CASEELSE
