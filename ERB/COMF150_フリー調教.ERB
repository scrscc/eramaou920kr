
;-------------------------------------------------
;フリー調教
;調教者が（CSTR:7）の箇所を刺激
;-------------------------------------------------
@COM150

PRINTFORML %CSTR:7%조교
CALL TRAIN_MESSAGE_B

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
LOSEBASE:0 += 5
LOSEBASE:1 += 50

;快フリーのソース
SOURCE:18 = 0
;不潔のソース
SOURCE:8 = 30
;露出のソース
SOURCE:12 = 100

;ABL:Ｆ感覚をみる
IF ABL:4 == 0
	SOURCE:18 = 20
ELSEIF ABL:4 == 1
	SOURCE:18 = 100
ELSEIF ABL:4 == 2
	SOURCE:18 = 500
ELSEIF ABL:4 == 3
	SOURCE:18 = 1200
ELSEIF ABL:4 == 4
	SOURCE:18 = 2000
ELSE
	SOURCE:18 = 2800
ENDIF

;ABL:Ｆ中毒をみる
IF ABL:40 == 0
	TIMES SOURCE:18 , 1.00
ELSEIF ABL:40 == 1
	TIMES SOURCE:18 , 1.10
ELSEIF ABL:40 == 2
	TIMES SOURCE:18 , 1.20
ELSEIF ABL:40 == 3
	TIMES SOURCE:18 , 1.30
ELSEIF ABL:40 == 4
	TIMES SOURCE:18 , 1.50
ELSE
	TIMES SOURCE:18 , 1.70
ENDIF


;-------------------------------------------------
;経験上昇
;-------------------------------------------------
;레즈경험・ホモ経験
IF TALENT:122 == 0 && TALENT:PLAYER:122 == 0
	PRINTS EXPNAME:40
	PRINTL +5
	EXP:40 += 5
ELSEIF TALENT:122 == 1 && TALENT:PLAYER:122 == 1
	PRINTS EXPNAME:41
	PRINTL +5
	EXP:41 += 5
ENDIF

RETURN 1

