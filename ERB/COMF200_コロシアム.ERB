;----------------------------------------------------
;노예の戦闘能力値計算(結果はBに格納)
;----------------------------------------------------
@ARENA_SLAVE_POINT
A = TARGET
;戦闘値セット
CALL WEAPON_RESTORE,TARGET
B = 0

;攻撃値
B += CFLAG:A:11
;防御値
B += CFLAG:A:12
;마술・呪術持ちはレベル*2をさらに加算
SIF TALENT:A:241 == 1
	B += (CFLAG:A:9 * 2)
SIF TALENT:A:250 == 1
	B += (CFLAG:A:9 * 2)

;気力によって戦闘値が減少 
B *= BASE:A:1
B /= MAXBASE:A:1

SIF B <= 0
	B = 1

RETURN B

;----------------------------------------------------
;조수の戦闘能力値計算(結果はBに格納)
;----------------------------------------------------
@ARENA_ASSI_POINT
A = ASSI
;戦闘値セット
CALL WEAPON_RESTORE,ASSI
B = 0

;攻撃値
B += CFLAG:A:11
;防御値
B += CFLAG:A:12
;마술・呪術持ちはレベル*2をさらに加算
SIF TALENT:A:241 == 1
	B += (CFLAG:A:9 * 2)
SIF TALENT:A:250 == 1
	B += (CFLAG:A:9 * 2)

;気力によって戦闘値が減少
B *= (BASE:A:1 / 100)
B /= (MAXBASE:A:1 / 100)

SIF B <= 0
	B = 1

RETURN B


