	IF TALENT:ASSI:55
		LOSEBASE:0 += 50
		LOSEBASE:1 += 50
	ENDIF
ENDIF
;薬物経験が多いほど消費体力は減っていく
IF EXP:57 < EXPLV:1
	LOSEBASE:0 += 120
ELSEIF EXP:57 < EXPLV:2
	LOSEBASE:0 += 30
ELSEIF EXP:57 < EXPLV:3
	LOSEBASE:0 += 0
ELSEIF EXP:57 < EXPLV:5
	LOSEBASE:0 -= 30
ELSE
	LOSEBASE:0 -= 40
ENDIF

