@UNIT_CHECK
;-----------------------------------------------
;MAP상에 勇者が存在するか
;いたらキャラNoを、いないなら-1をRETURNする
;좌표는 P0,1

REPEAT CHARANUM
	SIF CFLAG:COUNT:1 != 2 && CFLAG:COUNT:1 != 3
		CONTINUE
	X = CFLAG:COUNT:510
	SIF X < 0
		CONTINUE
	Y = CFLAG:COUNT:511
	SIF Y < 0
		CONTINUE
	
	SIF X == P:0 && Y == P:1
		RETURN COUNT
	
REND

RETURN -1


;------------------------------------------------
@MON_CHECK
;------------------------------------------------
;MAP上にモンスターが存在するか
;いたらモンスターLVを、いないなら0をRETURNする
;좌표는 P0,1

LOCAL:0 = DB:(P:1):(P:0)

SIF LOCAL:0 <= 0 || LOCAL:0 >= 10
	RETURN 0


LOCAL:1 = 0

REPEAT 5
	LOCAL:2 = LOCAL:0 * 10 + COUNT + 100
	LOCAL:1 += ITEM:(LOCAL:2)
REND


;十分な兵が存在に必要
SIF LOCAL:1 > 20
	RETURN LOCAL:0

DB:(P:1):(P:0) = 0

RETURN 0

